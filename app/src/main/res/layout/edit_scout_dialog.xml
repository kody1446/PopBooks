<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/edit_scout_title"
        android:text="Edit Scout"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/edit_scout_name"
        android:layout_below="@+id/edit_scout_title"
        android:hint="name"
        android:textAlignment="center"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/edit_scout_rank"
        android:layout_below="@+id/edit_scout_name"
        android:entries="@array/scout_rank"
        android:textAlignment="center"/>

</RelativeLayout>