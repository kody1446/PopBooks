<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/location_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Name" />

    <TextView
        android:id="@+id/location_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/location_name_txt"
        android:layout_marginLeft="20dp"
        android:text="Location Date"
        android:textStyle="italic" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:layout_marginLeft="20dp"
        android:id="@+id/dollarSign"
        android:layout_below="@+id/location_name_txt"/>

    <TextView
        android:id="@+id/location_total_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_date_txt"
        android:layout_toRightOf="@+id/dollarSign"
        android:layout_marginLeft="20dp"
        android:text="Location Total"
        android:textStyle="bold" />


</RelativeLayout>