<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/add_pop_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Popcorn Product"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="22dp"/>
    <EditText
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product name"
        android:textAlignment="center"
        android:layout_below="@+id/add_pop_title"
        android:id="@+id/add_pop_name"/>
    <EditText
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product description"
        android:textAlignment="center"
        android:layout_below="@+id/add_pop_name"
        android:id="@+id/add_pop_desc"/>
    <EditText
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product price"
        android:textAlignment="center"
        android:layout_below="@+id/add_pop_desc"
        android:id="@+id/add_pop_price"/>
    <EditText
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantity in stock"
        android:textAlignment="center"
        android:layout_below="@+id/add_pop_price"
        android:id="@+id/add_pop_qty_dialog"/>


</RelativeLayout>