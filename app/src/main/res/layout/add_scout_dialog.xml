<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ADD SCOUT"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:id="@+id/addscout_title"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Scout name"
        android:textAlignment="center"
        android:layout_below="@+id/addscout_title"
        android:paddingTop="10dp"
        android:id="@+id/addscout_name"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addscout_name"
        android:layout_marginTop="20dp"
        android:id="@+id/addscout_rank_spinner"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:entries="@array/scout_rank" />



</RelativeLayout>